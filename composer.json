{
	"name": "shnhrrsn/laravel-5-base-app",
	"description": "Alternative base app for Laravel 5",
	"require": {
		"laravel/framework": "5.0.*",
		"illuminate/html": "5.0.*",
		"shnhrrsn/laravel-assets": "1.0.*",
		"filp/whoops": "1.1.*"
	},
	"require-dev": {
		"phpspec/phpspec": "~2.1"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
